<p> All Requests created by <%= @user.first_name %>  <%= @user.last_name %> </p>

<table>
  <thead>
    <tr>
      <th>Request Number</th>
      <th>Created by</th>
      <th>Required by</th>
      <th>Justification</th>
      <th>First approver</th>
      <th>Submitted</th>
      <th>Final approval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.requests.each do |request| %>
      <tr>
        <td><%= request.id %></td>
        <td><%= request.creator.full_name %></td>
        <td><%= request.required_by %></td>
        <td><%= request.justification %></td>
        <td><%= request.first_approved_by.full_name %></td>
        <td><%= request.submitted %></td>
        <td><%= request.final_approval %></td>
        <td><%= link_to 'Show', request %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Requests where <%= @user.first_name %>  <%= @user.last_name %> is the Approver!</p>


<table>
  <thead>
    <tr>
      <th>Request Number</th>
      <th>Created by</th>
      <th>Required by</th>
      <th>Justification</th>
      <th>First approver</th>
      <th>Submitted</th>
      <th>Final approval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.first_approvers.each do |request| %>
      <tr>
        <td><%= request.id %></td>
        <td><%= request.creator.full_name %></td>
        <td><%= request.required_by %></td>
        <td><%= request.justification %></td>
        <td><%= request.first_approved_by.full_name %></td>
        <td><%= request.submitted %></td>
        <td><%= request.final_approval %></td>
        <td><%= link_to 'Approve', edit_request_path(request.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>