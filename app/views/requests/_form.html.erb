<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  


  <%= f.label :created_by %>
  <%= f.label current_user.full_name %>

   

    <div class="field">
      <%= f.label :required_by %><br>
      <%= f.date_select :required_by %>
    </div>
    <div class="field">
      <%= f.label :justification %><br>
      <%= f.text_area :justification %>
    </div>
    <%= f.label :first_approver_id %><br>
    <%= f.collection_select :first_approver_id, User.all, :id, :full_name %>
  <% if @request.persisted? %>
    <div class="field">
      <%= f.label :final_approval %><br>
      <%= f.check_box :final_approval %>
    </div>
   <% end %> 

    <p> </p>
 
    <div class="actions">
      <%= f.submit %>


<% end %>
